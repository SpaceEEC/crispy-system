#!/usr/bin/env bash

set -e

if [[ -z "${APP_NAME}" ]]; then
    echo "APP_NAME is not set, aborting..."

    exit 1
fi

cd /opt/build

APP_VSN="$(grep 'version:' apps/$APP_NAME/mix.exs | cut -d '"' -f2)"

mkdir -p /opt/build/rel/artifacts

# Install updated versions of hex/rebar
mix local.rebar --force
mix local.hex --if-missing --force

export MIX_ENV=prod

# Fetch deps and compile
mix deps.get
# Run an explicit clean to remove any build artifacts from the host
mix do clean, deps.compile sentry --force, compile --force
# Build the release
mix release --profile=$APP_NAME:prod
# Copy tarball to output
cp "_build/prod/rel/$APP_NAME/releases/$APP_VSN/$APP_NAME.tar.gz" rel/artifacts/"$APP_NAME-$APP_VSN.tar.gz"

exit 0